<div class="container">
  <table id="cart" class="table table-hover table-condensed">
    <thead>
      <tr>
        <th style="width:50%">Product</th>
        <th style="width:10%">Price</th>
        <th style="width:8%">Quantity</th>
        <th style="width:22%" class="text-center">Subtotal</th>
        <th style="width:10%"></th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td data-th="Product">
          <%= form_for order_item, remote: true do |f| %>
            <div class="row">
              <div class="col-sm-2 hidden-xs">
                <%= image_tag product.images.first.image.url, class: "img-responsive",width: "100", height: "100"%>
              </div>
              <div class="col-sm-10">
                <h4 class="nomargin"><%= product.title %></h4>
              </div>
            </div>
          </td>
          <td data-th="Price">
            <%= number_to_currency order_item.unit_price %>
          </td>
          <td data-th="Quantity">
            <%= f.number_field :quantity, value: order_item.quantity.to_i, class: "form-control", min: 1 %>
            <%= f.hidden_field :product_id, value: product.id %>
          </td>
          <td data-th="Subtotal" class="text-center"><%= number_to_currency order_item.total_price %></td>
          <td class="actions" >
            <%= button_tag(type: 'submit', class: "btn btn-info btn-sm ") do%>
              <i class="fa fa-refresh"></i>
            <%end%>
            <%= link_to order_item, { data: { confirm: "Are you sure you wish to delete the product '#{order_item.product.title}' from your cart?" }, method: :delete, remote: true, class: "btn btn-danger btn-sm" } do %>
              <i class="fa fa-trash-o"></i>
            <%end%>
          </td>
        </tr>
      </tbody>
    <% end %>
    <td colspan="2" class="hidden-xs"></td>
  </table>
</div>
