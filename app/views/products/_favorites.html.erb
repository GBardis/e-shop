<% unless current_user.favorite_products.exists?(id: @products.id) %>
  <%= link_to favorite_products_path(product_id: @products),class: "btn btn-heart", method: :post,:remote => true do  %>
    <i class="fa fa-heart-o" aria-hidden="true" style="font-size:48px;color:red"></i>
  <%end%>
<% else %>
  <%= link_to favorite_product_path(@products),class: "btn btn-heart", method: :delete,:remote => true do  %>
    <i class="fa fa-heart" aria-hidden="true" style="font-size:48px;color:red"></i>
  <% end %>
<% end %>
