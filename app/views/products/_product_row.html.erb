<div class="item  col-xs-12 col-md-12 col-lg-4">
  <div class="thumbnail">
    <%= form_for order_item, remote: true do |f| %>
      <% if product.images.exists? %>
        <%= link_to product_path(product) do %>
          <%= image_tag product.images.first.image.url,class: "img-responsive",width: "200", height: "200", data: { action: 'zoom' }%>
        <%end%>
        <hr>
      <%else%>
        <script>
          $('#zoom_02').ezPlus();
        </script>
        <%= link_to product_path(product) do %>
          <img class="group list-group-image" src="http://placehold.it/400x250/000/fff" alt="" id="zoom_02" data-zoom-image="http://placehold.it/400x250/000/fff" width="411" />
        <%end%>
      <%end%>
      <div class="caption">
        <h4 class ="group inner list-group-item-heading"><%= product.title %></h4>
        <!--<p class = "group inner list-group-item-text"><%= product.description %></p>-->
        <div class="row">
          <div class="col-xs-12 col-md-5 ">
            <p class="lead"><%=  number_to_currency( product.price,:unit => "â‚¬") %></p>
          </div>
          <div class="col-xs-12 col-md-5 ">
            <%= f.hidden_field :quantity, value: 1, class: "form-control", min: 1 %>
            <%= f.hidden_field :product_id, value: product.id %>
            <%= f.submit "Add to Cart", class: "btn btn-success" %>
          </div>
          <div class ="col-xs-12 col-md-2" id="favorite_index-<%=product.id%>">
            <%= render partial: 'favorite_actions/favorite_index' ,locals: {product: product} %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
