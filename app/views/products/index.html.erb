<div class="container">
    <div class="well well-sm" id = "content">
        <strong>Category Title</strong>
        <div class="btn-group" id = "buttons">
            <a href="#" id="list" class="btn btn-default btn-sm"><span class="glyphicon glyphicon-th-list">
                </span>List</a> <a href="#" id="grid" class="btn btn-default btn-sm"><span
                class="glyphicon glyphicon-th"></span>Grid</a>
        </div>
    </div>
    <div id="categories-list" class="row list-group">
        <% @products.each do |product|%>
            <div class="item  col-xs-12 col-md-12 col-lg-4">
                <div class="thumbnail">
                    <!--  <img class="group list-group-image" src="http://placehold.it/400x250/000/fff" alt="" />-->
                    <%#= image_tag product.images %>
                    <%# if @product.images.exists? %>
                    <%# @product.images.each do |z| %>
                        <%#= image_tag z.image %>
                        <%#end%>
                        <%#end%>
                        <div class="caption">
                            <h4 class ="group inner list-group-item-heading"><%= product.title %></h4>
                            <p class = "group inner list-group-item-text"><%= product.description %></p>
                            <div class="row">
                                <div class="col-xs-12 col-md-6 col-lg-2">
                                    <p class="lead"><%= product.price%></p>
                                </div>
                                <div class="col-xs-12 col-md-6 col-lg-2">
                                    <a class="btn btn-success" href="http://www.jquery2dotnet.com">Add to cart</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            <%end%>
        </div>
        <%= paginate @products,remote: true, theme: 'twitter-bootstrap-4',:pagination_class => "pagination-small pagination-centered" %>
    </div>
    <div class="footer">
        <div class="row">
            <div class="col-lg-12"></div>
        </div>
    </div>
