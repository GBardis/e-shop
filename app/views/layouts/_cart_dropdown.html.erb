<% if current_order.order_items.size == 0 %>
  <div id="cart" class="btn-group btn-block">
    <button type="button" data-toggle="dropdown" class="btn btn-block btn-lg dropdown-toggle">
      <i class="fa fa-shopping-cart"></i>
      <span class="hidden-md">Το Καλάθι είναι Άδειο </span>
    </button>
  <%else%>
    <div id="cart" class="btn-group btn-block">
      <button type="button" data-toggle="dropdown" class="btn btn-block btn-lg dropdown-toggle">
        <i class="fa fa-shopping-cart"></i>
        <span class="hidden-md">Καλάθι:</span>
        <span id="cart-total">
          <%= current_order.order_items.size%> -(<%= number_to_currency current_order.subtotal%>)
          </span>
        <i class="fa fa-caret-down"></i>
      </button>
      <%= render 'layouts/cart_dropdown_row' %>
    <% end %>
