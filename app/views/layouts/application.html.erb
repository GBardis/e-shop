<!DOCTYPE html>
<html>
  <head>
    <title><%= @meta_title ? @meta_title : ApplicationController::BRAND_NAME %></title>
    <% if @meta_description.present? %>
      <meta name="description" content="<%= @meta_description %>">
    <% end %>
    <% if @og_properties.present? %>
      <%= meta_og_tags @og_properties %>
    <% end %>
    <%= favicon_link_tag 'favicon/favicon_1' %>
    <%= include_gon %>
    <%= csrf_meta_tags %>
    <meta content="Are you interested in bicycles? Do you like Mountain
    biking? Or maybe chillin sunday ride over the park?. Read more on
    AmberBit!" name="description">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
    <script src="https://cdn.rawgit.com/igorlino/elevatezoom-plus/1.1.20/src/jquery.ez-plus.js"></script>
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
  </head>
  <body>
    <div class="page-header" id="top_header">
      <%= render "layouts/header_top"%>
      <div class="container">
        <%= render "layouts/header_bottom"%>
      </div>
    </div>
    <div class="container" id="flash_messages" >
      <%= render "layouts/flash_messages"%>
    </div>
    <%= yield %>
    <%=render "layouts/footer"%>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <script src="https://js.braintreegateway.com/v2/braintree.js"></script>
  </body>
</html>
