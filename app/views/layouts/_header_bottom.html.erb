<div class="main-header">
  <div class="col-md-5">
    <h1 style="color:#ffb95e;text-align: center;">Αποψη</h1>
  </div>
  <div class="col-md-4">
    <%= render "layouts/search"%>
  </div>
  <div class="col-md-3" style="padding-right:0;">
    <%= render "layouts/cart_dropdown"%>
  </div>
</div>
<div id="custom-bootstrap-menu" class="navbar navbar-default " role="navigation">
  <div class="navbar-header">
    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-menubuilder"><span class="sr-only">Toggle navigation</span><span class="icon-bar"></span><span class="icon-bar"></span><span class="icon-bar"></span>
    </button>
  </div>
  <div class="collapse navbar-collapse navbar-menubuilder">
    <ul class="nav navbar-nav navbar-left">
      <% @categories.each do |parent| %>
        <li class="dropdown">
          <%= link_to parent.name , category_products_path(parent),  class:  'dropdown-toggle' , 'data-toggle' => 'dropdown' %>
          <ul class="dropdown-menu">
            <% parent.subcategories.each do |child|%>
              <li><%= link_to child.name , category_products_path(child) %></li>
            <%end%>
          </ul>
        </li>
      <%end%>
      <li>
        <% if current_user %>
          <%if current_user.admin %>
            <%= link_to "Admin", rails_admin.dashboard_path%>
          <%end%>
        <%end%>
      </li>
    </ul>
  </ul>
</div>
</div>
</div>
